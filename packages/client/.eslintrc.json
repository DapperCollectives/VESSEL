{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prefer-const": ["error"],
    "quotes": ["error", "double"]
  },
  "ignorePatterns": ["build/**/*", "public/**/*", "src/flow/**/*"]
}
