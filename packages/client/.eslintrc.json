{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "airbnb"
  ],

  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "parserOpts": {
        "plugins": ["jsx"]
      }
    }
  },
  "plugins": ["react", "@babel", "prettier"],
  "rules": {
    "indent": ["off"],
    "prefer-const": ["error"],
    "quotes": ["off", "single"],
    "comma-dangle": ["off"],
    "operator-linebreak": ["off"],
    "implicit-arrow-linebreak": ["off"],
    "function-paren-newline": ["off"],
    "object-shorthand": ["error", "properties"],
    "object-curly-newline": ["off"],
    "react/jsx-filename-extension": ["off"],
    "react/jsx-indent": ["off"],
    "react/jsx-curly-newline": ["off"],
    "react/react-in-jsx-scope": ["off"],
    "react/prop-types": ["error", { "skipUndeclared": true }],
    "react/no-multi-comp": [
      2,
      {
        "ignoreStateless": true
      }
    ],
    "jsx-a11y/click-events-have-key-events": ["off"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "comma-dangle": ["error", "always-multiline"]
      },
      {
        "usePrettierrc": true
      }
    ],
    "import/order": [0]
  },
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "extends": ["airbnb-typescript"],
      "env": {
        "browser": true
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "typescript": {
            "project": "./tsconfig.json"
          }
        }
      },
      // Parser Settings
      // =================================
      // allow ESLint to understand TypeScript syntax
      // https://github.com/iamturns/eslint-config-airbnb-typescript/blob/master/lib/shared.js#L10
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        // Lint with Type Information
        // https://github.com/typescript-eslint/typescript-eslint/blob/master/docs/getting-started/linting/TYPED_LINTING.md
        "project": "./tsconfig.json"
      }
    }
  ],
  "ignorePatterns": ["build/**/*", "public/**/*", "src/flow/**/*"]
}
